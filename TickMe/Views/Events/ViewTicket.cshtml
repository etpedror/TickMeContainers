@model TickMe.Models.TicketBuyViewModel

@{
    ViewData["Title"] = "ViewTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ticket</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-lg-3">
            <div id="qrcode"></div>
        </div>
        <div class="col-lg-6">
            <h2>@Model.evnt.Title</h2>
            <h3>@Model.evnt.Venue</h3>
        </div>
        <div class="col-lg-3">
            <h4>
                <span class="pull-right">@Html.DisplayFor(model => model.evnt.StartMoment)</span>
            </h4>
            <br />
            <h4>
                <span class="pull-right">@Html.DisplayFor(model => model.evnt.Duration)</span>
            </h4>
            <br />
            <hr />
            <span class="pull-right">
                Ticket number : @Html.DisplayFor(model => model.ticket.SerialNumber)
            </span>
        </div>
    </div>
    @Html.DisplayFor(model => model.ticket.Id)
    <hr />
</div>
<div>
    <a asp-action="MyEvents">Back to List</a>
</div>
@section scripts {
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.qrcode.min.js"></script>
    <script>
        $('#qrcode').qrcode('@Model.ticket.ToString()');

    </script>

}
